<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/home_bg"
    android:orientation="vertical"
    android:weightSum="1">


    <include layout="@layout/top_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:drawableBottom="@drawable/line"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="联系人"
            android:textColor="@color/drak"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/ed_personText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:padding="10dp"
            android:textSize="14dp" />
    </LinearLayout>


    <RadioGroup
        android:id="@+id/rg_edit_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:drawableBottom="@drawable/line"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_edit_adress_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="男士"
            android:checked="true"
            android:textColor="@color/drak"
            android:textSize="15dp" />

        <RadioButton
            android:id="@+id/rb_edit_adress_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="女士"
            android:textColor="@color/drak"
            android:textSize="15dp" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="手机号"
            android:textColor="@color/drak"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/ed_phoneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:drawableBottom="@drawable/line"
            android:padding="10dp"
            android:textSize="14dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="left|center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="所在城市"
            android:textColor="@color/drak"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_edit_address_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="成都"
            android:textColor="@color/drak"
            android:textSize="15dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="left|center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="收货地址"
            android:textColor="@color/drak"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_edit_address_detailed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="成都职业技术学院"
            android:textColor="@color/drak"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:gravity="left|center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="默认地址"
            android:textColor="@color/drak"
            android:textSize="15dp" />


        <cn.refactor.library.SmoothCheckBox
            android:id="@+id/scb_address_choose"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            app:color_checked="@color/radiobutton_text_press" />


    </LinearLayout>

    <Button
        android:id="@+id/bt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:padding="8dp"
        android:text=" 添加当前地址 "
        android:textSize="16dp" />


</LinearLayout>

