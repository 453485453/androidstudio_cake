<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/menu_bg"
    android:orientation="vertical">

    <com.sujian.finalandroid.ui.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/app_icon"
        android:id="@+id/civ_pic"
        app:civ_border_width="2dp"
        app:civ_border_color="#fff" />

    <TextView
        android:id="@+id/user_account"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:text="ID:12111" />

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_login"
            android:textColor="@color/left_menu_text_selector"
            android:background="@drawable/left_menu_button_bg_selector"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="登  陆" />


        <Button
            android:id="@+id/bt_reg"
            android:layout_margin="10dp"
            android:textColor="@color/left_menu_text_selector"
            android:background="@drawable/left_menu_button_bg_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注   册" />
    </LinearLayout>

    <ListView
        android:id="@+id/menu_listview"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:layout_width="wrap_content"
        android:dividerHeight="0dp"
        android:divider="#00000000"
        android:listSelector="@android:color/transparent"
        android:layout_height="wrap_content" />

</LinearLayout>